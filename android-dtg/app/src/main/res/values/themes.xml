<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Application Theme -->
    <style name="Theme.GLECDTG" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_dark</item>

        <!-- Customize your theme here -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- No Action Bar Theme (for splash screen) -->
    <style name="Theme.GLECDTG.NoActionBar" parent="Theme.GLECDTG">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Full Screen Theme -->
    <style name="Theme.GLECDTG.Fullscreen" parent="Theme.GLECDTG.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.GLECDTG.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.GLECDTG.Button.Primary" parent="Widget.GLECDTG.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.GLECDTG.Button.Secondary" parent="Widget.GLECDTG.Button">
        <item name="backgroundTint">@color/accent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Card Styles -->
    <style name="Widget.GLECDTG.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.GLECDTG.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.GLECDTG.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.GLECDTG.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.GLECDTG.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Status Indicator Styles -->
    <style name="Widget.GLECDTG.StatusIndicator">
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="Widget.GLECDTG.StatusIndicator.Success">
        <item name="android:background">@drawable/circle_success</item>
    </style>

    <style name="Widget.GLECDTG.StatusIndicator.Warning">
        <item name="android:background">@drawable/circle_warning</item>
    </style>

    <style name="Widget.GLECDTG.StatusIndicator.Error">
        <item name="android:background">@drawable/circle_error</item>
    </style>
</resources>
